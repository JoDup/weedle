drop table W_BEST_PRACTICE;
CREATE TABLE "W_BEST_PRACTICE" (
	"BP_ID"	INTEGER,
	"PLANT_SIZE"	TEXT,
	"BP_TYPE"	TEXT,
	"BP_MIN"	NUMERIC,
	"BP_MAX"	NUMERIC,
	"UNIT"	TEXT,
	PRIMARY KEY("BP_ID")
);

